<Window x:Class="ElysSalon2._0.adapters.InBound.UI.views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="GridMainWindow" Height="720" Width="1280"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>


    </Window.Resources>
    <Grid x:Name="GridMainWindow" RenderTransformOrigin="25,0" Height="720" Margin="0,0,0,-16">
        <Grid.Background>
            <ImageBrush ImageSource="/images/wallpaper2.png" Opacity="0.75" />
        </Grid.Background>

        <Ellipse HorizontalAlignment="Center" Height="490" Margin="0,656,0,0" Stroke="Black" VerticalAlignment="Top"
                 Width="2604" Fill="Black" />

        <Button x:Name="BtnServices" Style="{DynamicResource BtnMenu}" Content="SERVICIOS" HorizontalAlignment="Left"
                Height="478" Margin="78,140,0,0" VerticalAlignment="Top" Width="366" FontSize="80" FontWeight="Bold"
                FontFamily="Bahnschrift Condensed" Foreground="#FFFFF9FC" Click="btnServices_Click">


            <Button.Background>
                <ImageBrush ImageSource="/images/Services.jpg" />
            </Button.Background>
        </Button>
        <Button x:Name="BtnProducts" Style="{DynamicResource BtnMenu}" Content="PRODUCTOS" HorizontalAlignment="Left"
                Height="478" Margin="494,140,0,0" VerticalAlignment="Top" Width="366" FontSize="80" FontWeight="Bold"
                FontFamily="Bahnschrift Condensed" Foreground="#FFFFF9FC" Click="btnProducts_Click">
            <Button.Background>
                <ImageBrush ImageSource="/images/products.jpg" />
            </Button.Background>
        </Button>
        <Image HorizontalAlignment="Left" Height="341" Margin="906,61,0,0" VerticalAlignment="Top" Width="322"
               Source="/images/NEGRO LOGO_Mesa de trabajo 1.png">

            <Image.Effect>
                <DropShadowEffect Color="Black" BlurRadius="35" ShadowDepth="1" Direction="360" />
            </Image.Effect>
            <Image.OpacityMask>
                <ImageBrush ImageSource="/images/NEGRO LOGO_Mesa de trabajo 1.png" Stretch="Fill" />
            </Image.OpacityMask>
        </Image>
        <Label Content="ELIJA UNA OPCIÓN" HorizontalAlignment="Left" Height="76" Margin="292,38,0,0"
               VerticalAlignment="Top" Width="360" FontFamily="Bahnschrift Condensed" FontSize="60" FontWeight="Bold" />
        <Button Style="{StaticResource Btn}" x:Name="AdminBtn" Content="ADMINISTRACION" HorizontalAlignment="Left"
                Height="66" Margin="928,539,0,0" VerticalAlignment="Top" Width="278" FontFamily="Bahnschrift Condensed"
                FontSize="24" FontWeight="Bold" Click="adminBtn_Click" />

    </Grid>
</Window>