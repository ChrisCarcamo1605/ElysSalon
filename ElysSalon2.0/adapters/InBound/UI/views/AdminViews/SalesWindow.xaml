<Window x:Class="ElysSalon2._0.adapters.InBound.UI.views.AdminViews.SalesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElysSalon2._0.adapters.InBound.UI.views.AdminViews"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="SalesWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/wallpaper2.png"/>
        </Grid.Background>

        <ComboBox ItemsSource="{Binding FilterOptions}" 
                  Width="160" Height="40" 
                  Margin="316,114,324,0" 
                  VerticalAlignment="Top"
                  DisplayMemberPath="Value"
                  SelectedItem="{Binding SelectedFilter, UpdateSourceTrigger=PropertyChanged}"/>

        <ScrollViewer  HorizontalAlignment="Left" Height="242" Margin="29,183,0,0"
               VerticalAlignment="Top" Width="735"
               RenderTransformOrigin="0.5,0.5">

            <ItemsControl Background="#FFDFDFDF" ItemsSource="{Binding SalesView}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black" BorderThickness="1"
                         Margin="0 2">
                            <Grid Margin="0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>


                                <TextBlock Grid.Column="0" Text="{Binding SaleId}" Background="Gainsboro"
                                    FontSize="20"

                                    FontFamily="Bahnschrift Condensed" VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    TextAlignment="Center" TextWrapping="Wrap" />


                                <TextBlock FontSize="18" Text="{Binding SaleDate}" Grid.Column="1"

                                    FontFamily="Bahnschrift Condensed"
                                    TextAlignment="Center" VerticalAlignment="Center"
                                    TextWrapping="Wrap"
                                    Padding="0, 0 " />

                                <TextBlock FontSize="20" Text="{Binding Total}" Grid.Column="2"

                                    FontFamily="Bahnschrift Condensed"
                                    TextAlignment="Center" VerticalAlignment="Center"
                                    TextWrapping="Wrap"
                                    Padding="0, 0 " />

                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <Button Style="{StaticResource ExitBtn}" Content="Button" Margin="29,10,0,0" Command="{Binding ExitCommand}"/>
    </Grid>
</Window>
