<Window x:Class="ElysSalon2._0.adapters.InBound.UI.views.AdminViews.SalesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElysSalon2._0.adapters.InBound.UI.views.AdminViews"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="SalesWindow" Height="720" Width="1280">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/wallpaper2.png"/>
        </Grid.Background>

        <ComboBox ItemsSource="{Binding FilterOptions}" Height="34" 
                  Margin="965,303,53,0" 
                  VerticalAlignment="Top"
                  DisplayMemberPath="Value"
                  SelectedItem="{Binding SelectedFilter, UpdateSourceTrigger=PropertyChanged}"/>

        <ScrollViewer  HorizontalAlignment="Left" Height="373" Margin="40,303,0,0"
               VerticalAlignment="Top" Width="882"
               RenderTransformOrigin="0.5,0.5">

            <ItemsControl Background="#FFDFDFDF" ItemsSource="{Binding SalesView}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black" BorderThickness="1"
                         Margin="0 2">
                            <Grid Margin="0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>


                                <TextBlock Grid.Column="0" Text="{Binding SaleId}" Background="Gainsboro"
                                    FontSize="20"

                                    FontFamily="Bahnschrift Condensed" VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    TextAlignment="Center" TextWrapping="Wrap" />


                                <TextBlock FontSize="18" Text="{Binding SaleDate}" Grid.Column="1"

                                    FontFamily="Bahnschrift Condensed"
                                    TextAlignment="Center" VerticalAlignment="Center"
                                    TextWrapping="Wrap"
                                    Padding="0, 0 " />

                                <TextBlock FontSize="20" Text="{Binding Total}" Grid.Column="2"

                                    FontFamily="Bahnschrift Condensed"
                                    TextAlignment="Center" VerticalAlignment="Center"
                                    TextWrapping="Wrap"
                                    Padding="0, 0 " />

                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <DatePicker  Margin="272,250,799,0" VerticalAlignment="Top"/>
        <DatePicker Margin="40,250,1031,0" VerticalAlignment="Top"/>
        <ui:Button Content="Generar Reporte"
                   Height="35" Margin="522,250,0,0"
                   VerticalAlignment="Top" Width="155"
                   />
        <Button Style="{StaticResource ExitBtn}" Content="Button" Margin="22,34,0,0" Command="{Binding ExitCommand}" Height="66" Width="122" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Window>
