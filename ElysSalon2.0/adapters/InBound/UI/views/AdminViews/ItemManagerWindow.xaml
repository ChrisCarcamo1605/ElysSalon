<Window x:Class="ElysSalon2._0.adapters.InBound.UI.views.AdminViews.ItemManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ItemManager" Height="720" Width="1280"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/adapters/InBound/UI/views/AdminViews/wallpaper3.jpg" />
        </Grid.Background>
        <Label Style="{DynamicResource TitleText}" Content="Gestion de Articulos" Width="420" Height="67"
               Grid.Column="1" />
        <Button x:Name="exitBtn" Style="{DynamicResource ExitBtn}" Content="Button" Click="exitBtn_Click"
                Grid.ColumnSpan="2" />

        <TextBox Text="{Binding articleName, UpdateSourceTrigger=PropertyChanged}" x:Name="nameTxtBox"
                 Style="{StaticResource textInput}" HorizontalAlignment="Left" Height="47"
                 Margin="50,158,0,0"
                 VerticalAlignment="Top" Width="203"
                 Grid.ColumnSpan="2" />
        <TextBox Text="{Binding priceCost, UpdateSourceTrigger=PropertyChanged}" x:Name="priceCostBox"
                 Style="{StaticResource textInput}" HorizontalAlignment="Left" Height="44"
                 Margin="516,161,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="170"
                 Grid.ColumnSpan="2" />
        <ComboBox Text="Tipo Articulo" ItemsSource="{Binding articleTypesCollection}" SelectedIndex="0"
                  Style="{StaticResource ComboBoxFlatStyle}" x:Name="typeComboBox"
                  HorizontalAlignment="Left" Height="45" Margin="281,160,0,0" VerticalAlignment="Top" Width="210"
                  RenderTransformOrigin="0.781,0.671"
                  DisplayMemberPath="ArticleTypeName"
                  SelectedValuePath="ArticleTypeId"
                  SelectedValue="{Binding articleTypeId, UpdateSourceTrigger=PropertyChanged}"
                  Grid.ColumnSpan="2">

        </ComboBox>
        <TextBox Text="{Binding description, UpdateSourceTrigger=PropertyChanged}" x:Name="descriptionBox"
                 Style="{StaticResource textInput}" HorizontalAlignment="Left" Height="44"
                 Margin="413,249,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="463"
                 Grid.ColumnSpan="2" />


        <TextBox Text="{Binding priceBuy, UpdateSourceTrigger=PropertyChanged}" x:Name="priceBuyBox"
                 Style="{StaticResource textInput}" HorizontalAlignment="Left" Height="44"
                 Margin="210,249,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="169"
                 Grid.ColumnSpan="2" />
        <TextBox Text="{Binding stock, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource textInput}"
                 x:Name="stockBox" HorizontalAlignment="Left" Height="42"
                 Margin="50,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="129"
                 Grid.ColumnSpan="2" />
        <Button Style="{DynamicResource addBtn}" x:Name="addArticleBtn" Content="Agregar" HorizontalAlignment="Left"
                Height="51" Margin="732,158,0,0" VerticalAlignment="Top" Width="144"
                Grid.ColumnSpan="2"
                Command="{Binding addArticleCommand}" />
        <Button Style="{StaticResource addBtn}" x:Name="updateBtn" Content="Actualizar" Grid.ColumnSpan="2"
                HorizontalAlignment="Left" Height="64" Margin="1000,522,0,0" VerticalAlignment="Top" Width="228" />
        <Button Style="{StaticResource addBtn}" x:Name="deleteBtn" Content="Borrar" Grid.ColumnSpan="2"
                HorizontalAlignment="Left" Height="65" Margin="1000,595,0,0" VerticalAlignment="Top" Width="228"
                Background="#FFBF0000" />
        <ComboBox
            DisplayMemberPath="ArticleTypeName"
            Style="{StaticResource ComboBoxFlatStyle}"
            x:Name="sortComboBox" Grid.ColumnSpan="2"
            HorizontalAlignment="Left" Height="62" Margin="1000,450,0,0" VerticalAlignment="Top" Width="228">
        </ComboBox>
        <TextBox Text="{Binding searchText, UpdateSourceTrigger=PropertyChanged}" x:Name="searchTxtBox" Style="{StaticResource textInput}" Grid.ColumnSpan="2"
                 HorizontalAlignment="Left" Height="54" Margin="952,214,0,0" VerticalAlignment="Top" Width="276" />

        <Label Content="ORDENAR POR:" Grid.ColumnSpan="2" Margin="1000,409,122,0" VerticalAlignment="Top"
               FontFamily="Bahnschrift Condensed" FontSize="27" />
        <Label Content="BUSCAR POR NOMBRE" Grid.ColumnSpan="2" Margin="952,172,106,0" VerticalAlignment="Top"
               FontFamily="Bahnschrift Condensed" FontSize="27" />
        <Button x:Name="addTypeBtn" Style="{StaticResource addBtn}" Content="Gestionar Tipos" Grid.ColumnSpan="2"
                HorizontalAlignment="Left" Height="51" Margin="952,110,0,0" VerticalAlignment="Top" Width="276"
                Foreground="Black" BorderBrush="Black" Background="#FFFFF8D6" BorderThickness="3,3,3,3" />
        <ScrollViewer Grid.ColumnSpan="2" Margin="26,310,324,92">
            <ItemsControl Background="DarkGray" ItemsSource="{Binding ArticlesView}" Height="318">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="Azure" BorderBrush="Black" BorderThickness="1" Margin="0 2">
                            <Grid Margin="4 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding ArticleId}" Grid.Column="0" Background="Aqua" FontSize="20"
                                           FontFamily="Bahnschrift Condensed"
                                           TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"
                                           Padding="4, 7 ">
                                </TextBlock>
                                <TextBlock FontSize="18" Text="{Binding ArticleName}" Grid.Column="1"
                                           Background="AliceBlue"
                                           FontFamily="Bahnschrift Condensed"
                                           TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"
                                           Padding="4, 0 ">
                                </TextBlock>
                                <TextBlock FontSize="18" Text="{Binding ArticleType.ArticleTypeName}" Grid.Column="2"
                                           Background="Azure" FontFamily="Bahnschrift Condensed"
                                           TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"
                                           Padding="4, 0 ">
                                </TextBlock>
                                <TextBlock FontSize="20" Text="{Binding PriceCost}" Grid.Column="3"
                                           Background="Firebrick"
                                           FontFamily="Bahnschrift Condensed"
                                           TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"
                                           Padding="4, 0 ">
                                </TextBlock>
                                <TextBlock FontSize="20" Text="{Binding PriceBuy}" Grid.Column="4"
                                           Background="Gainsboro"
                                           FontFamily="Bahnschrift Condensed"
                                           TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"
                                           Padding="4, 0 ">
                                </TextBlock>
                                <TextBlock FontSize="20" Text="{Binding Stock}" Grid.Column="5" Background="HotPink"
                                           FontFamily="Bahnschrift Condensed"
                                           TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"
                                           Padding="4, 0 ">
                                </TextBlock>
                                <TextBlock FontSize="20" Text="{Binding Description}" Grid.Column="6"
                                           Background="Khaki"
                                           FontFamily="Bahnschrift Condensed"
                                           TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"
                                           Padding="4, 0 ">
                                </TextBlock>
                                <Button Content="Editar" Grid.Column="7" Background="Indigo"
                                        FontFamily="Bahnschrift Condensed"
                                        VerticalAlignment="Center"
                                        Padding="4, 15">
                                </Button>
                                <Button Content="Eliminar" Grid.Column="8" Background="Indigo"
                                        FontFamily="Bahnschrift Condensed"
                                        VerticalAlignment="Center"
                                        Padding="4, 15 "
                                        Command="{Binding DataContext.deleteArticleCommand,RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}">
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <Label Style="{DynamicResource TitleText}" FontSize="20" Content="Nombre" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="53,127,0,0" VerticalAlignment="Top" Height="28" Width="82"/>
        <Label Style="{DynamicResource TitleText}" FontSize="20" Content="Stock" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="53,218,0,0" Height="28" Width="76"/>
        <Label Style="{DynamicResource TitleText}" FontSize="20" Content="Tipo Articulo" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="294,127,0,0" Height="28" Width="102"/>
        <Label Style="{DynamicResource TitleText}" FontSize="20" Content="Costo" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="519,127,0,0" VerticalAlignment="Top" Height="28" Width="82"/>
        <Label Style="{DynamicResource TitleText}" FontSize="20" Content="Precio Venta" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="212,218,0,0" Height="28" Width="96"/>
        <Label Style="{DynamicResource TitleText}" FontSize="20"  Content="Descripción" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="413,218,0,0" Height="31" Width="98"/>


    </Grid>
</Window>