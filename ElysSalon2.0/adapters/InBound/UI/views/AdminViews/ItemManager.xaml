<Window x:Class="ElysSalon2._0.adapters.InBound.UI.views.AdminViews.ItemManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ItemManager" Height="720" Width="1280"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/adapters/InBound/UI/views/AdminViews/wallpaper3.jpg" />
        </Grid.Background>
        <Label Style="{DynamicResource TitleText}" Content="Gestion de Articulos" Width="420" Height="67"
               Grid.Column="1" />
        <Button x:Name="exitBtn" Style="{DynamicResource ExitBtn}" Content="Button" Click="exitBtn_Click"
                Grid.ColumnSpan="2" />

        <TextBox x:Name="nameTxtBox" Style="{StaticResource textInput}" HorizontalAlignment="Left" Height="58"
                 Margin="58,132,0,0"

                 VerticalAlignment="Top" Width="204" GotFocus="TextBox_GotFocus" LostFocus="nameTxtBox_LostFocus"
                 Loaded="nameTxtBox_Loaded_1" Grid.ColumnSpan="2" />
        <TextBox x:Name="priceCostBox" Style="{StaticResource textInput}" HorizontalAlignment="Left" Height="54"
                 Margin="527,136,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="171" Loaded="priceCostBox_Loaded" LostFocus="priceCostBox_LostFocus"
                 GotFocus="priceCostBox_GotFocus" Grid.ColumnSpan="2" />
        <ComboBox SelectedIndex="0" Style="{StaticResource ComboBoxFlatStyle}" x:Name="typeComboBox"
                  HorizontalAlignment="Left" Height="56" Margin="290,134,0,0" VerticalAlignment="Top" Width="212"
                  RenderTransformOrigin="0.781,0.671" Loaded="typeComboBox_Loaded" LostFocus="typeComboBox_LostFocus"
                  GotFocus="typeComboBox_GotFocus" Grid.ColumnSpan="2">
            <ComboBoxItem IsSelected="True">Tipo Articulo</ComboBoxItem>
        </ComboBox>
        <TextBox x:Name="descriptionBox" Style="{StaticResource textInput}" HorizontalAlignment="Left" Height="54"
                 Margin="430,214,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="466" GotFocus="descriptionBox_GotFocus"
                 LostFocus="descriptionBox_LostFocus" Loaded="descriptionBox_Loaded" Grid.ColumnSpan="2" />


        <TextBox x:Name="priceBuyBox" Style="{StaticResource textInput}" HorizontalAlignment="Left" Height="54"
                 Margin="226,214,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="170" GotFocus="priceBuyBox_GotFocus" LostFocus="priceBuyBox_LostFocus"
                 Loaded="priceBuyBox_Loaded" Grid.ColumnSpan="2" />
        <TextBox Style="{StaticResource textInput}" x:Name="stockBox" HorizontalAlignment="Left" Height="52"
                 Margin="58,216,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" Loaded="stockBox_Loaded"
                 LostFocus="stockBox_LostFocus" GotFocus="stockBox_GotFocus" Grid.ColumnSpan="2"/>
        <Button Style="{DynamicResource addBtn}" x:Name="addArticleBtn" Content="Agregar" HorizontalAlignment="Left"
                Height="54" Margin="732,136,0,0" VerticalAlignment="Top" Width="164" Click="addArticleBtn_Click"
                Grid.ColumnSpan="2" />

        <DataGrid x:Name="itemGrid"
                  Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="335" Margin="58,325,0,0"
                  VerticalAlignment="Top" Width="951"
                  ItemsSource="{Binding articlesCollection}" MaxColumnWidth="203"
                  AutoGenerateColumns="False" MinColumnWidth="100" Background="White" 
                  FontSize="20" FontFamily="Bahnschrift Condensed" 
                  CanUserSortColumns="False" 
                   IsSynchronizedWithCurrentItem="True"
          EnableRowVirtualization="False"
                  SelectedItem="{Binding SelectedArticle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  SelectionChanged="itemGrid_SelectionChanged"
                  IsReadOnly="False" KeyDown="itemGrid_KeyDown" SelectionMode="Single">
            <DataGrid.ColumnHeaderStyle>
                <Style/>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Artículo" Binding="{Binding article_id}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding article_name, UpdateSourceTrigger=PropertyChanged}" />
                <DataGridTextColumn Header="Tipo de Artículo" Binding="{Binding article_type, UpdateSourceTrigger=PropertyChanged}" />
                <DataGridTextColumn Header="Precio Costo" Binding="{Binding price_cost, UpdateSourceTrigger=PropertyChanged}" />
                <DataGridTextColumn Header="Precio Venta" Binding="{Binding price_buy, UpdateSourceTrigger=PropertyChanged}" />
                <DataGridTextColumn Header="Stock" Binding="{Binding stock, UpdateSourceTrigger=PropertyChanged}" />
                <DataGridTextColumn Header="Descripción" Binding="{Binding description, UpdateSourceTrigger=PropertyChanged}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Style="{StaticResource addBtn}" x:Name="updateBtn" Content="Actualizar" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="64" Margin="1037,512,0,0" VerticalAlignment="Top" Width="201" Click="updateBtn_Click"/>
        <Button Style="{StaticResource addBtn}" x:Name="deleteBtn" Content="Borrar" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="65" Margin="1037,595,0,0" VerticalAlignment="Top" Width="201" Background="#FFBF0000" Click="deleteBtn_Click"/>
        <ComboBox Style="{StaticResource ComboBoxFlatStyle}" x:Name="sortComboBox" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="62" Margin="1037,325,0,0" VerticalAlignment="Top" Width="201"/>
        <TextBox x:Name="searchTxtBox" Style="{StaticResource textInput}" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="54" Margin="962,214,0,0" TextWrapping="Wrap" Text="Buscar..
                 " VerticalAlignment="Top" Width="276"/>


    </Grid>
</Window>