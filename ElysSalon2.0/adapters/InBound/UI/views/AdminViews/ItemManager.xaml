<Window x:Class="ElysSalon2._0.adapters.InBound.UI.views.AdminViews.ItemManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElysSalon2._0.adapters.InBound.UI.views.AdminViews"
        mc:Ignorable="d"
        Title="ItemManager" Height="720" Width="1280"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/adapters/InBound/UI/views/AdminViews/wallpaper3.jpg" />
        </Grid.Background>
        <Label Style="{DynamicResource TitleText}" Content="Gestion de Articulos" Width="420" Height="67"
               Margin="0,12,0,0" />
        <Button x:Name="exitBtn" Style="{DynamicResource ExitBtn}" Content="Button" Click="exitBtn_Click"
                Margin="78,26,0,0" />

        <TextBox  x:Name="nameTxtBox" Style="{StaticResource textInput}" HorizontalAlignment="Left" Height="58" Margin="125,127,0,0"
                  
                 VerticalAlignment="Top" Width="205" GotFocus="TextBox_GotFocus" LostFocus="nameTxtBox_LostFocus" Loaded="nameTxtBox_Loaded_1" />
        <TextBox x:Name="priceCostBox" Style="{StaticResource textInput}" HorizontalAlignment="Left" Height="54" Margin="592,131,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="120" Loaded="priceCostBox_Loaded" LostFocus="priceCostBox_LostFocus" GotFocus="priceCostBox_GotFocus" />
        <ComboBox SelectedIndex="0" Style="{StaticResource ComboBoxFlatStyle}" x:Name="typeComboBox" HorizontalAlignment="Left" Height="56" Margin="357,129,0,0" VerticalAlignment="Top" Width="213"
                  RenderTransformOrigin="0.781,0.671" Loaded="typeComboBox_Loaded" LostFocus="typeComboBox_LostFocus" GotFocus="typeComboBox_GotFocus">
            <ComboBoxItem IsSelected="True" >Tipo Producto</ComboBoxItem>
        </ComboBox>
        <TextBox x:Name="descriptionBox" Style="{StaticResource textInput}" HorizontalAlignment="Left" Height="54" Margin="460,210,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="442" GotFocus="descriptionBox_GotFocus" LostFocus="descriptionBox_LostFocus" Loaded="descriptionBox_Loaded" />
        <DataGrid HorizontalAlignment="Center" Height="367" Margin="0,307,0,0" VerticalAlignment="Top" Width="1178"
                  d:ItemsSource="{d:SampleData ItemCount=5}" />
        <TextBox x:Name="priceBuyBox" Style="{StaticResource textInput}" HorizontalAlignment="Left" Height="54" Margin="298,210,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="118" GotFocus="priceBuyBox_GotFocus" LostFocus="priceBuyBox_LostFocus" Loaded="priceBuyBox_Loaded" />
        <TextBox Style="{StaticResource textInput}" x:Name="stockBox"  HorizontalAlignment="Left" Height="52" Margin="125,212,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="131" Loaded="stockBox_Loaded" LostFocus="stockBox_LostFocus" GotFocus="stockBox_GotFocus" />
        <Button  Style="{DynamicResource addBtn}" x:Name="addArticleBtn" Content="Agregar" HorizontalAlignment="Left" Height="54" Margin="738,131,0,0" VerticalAlignment="Top" Width="164" Click="addArticleBtn_Click"/>

    </Grid>
</Window>