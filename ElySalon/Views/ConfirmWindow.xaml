<Window x:Class="ElySalon.confirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElySalon"
        mc:Ignorable="d"
         Title="ConfirmWindow" 
        Height="350" 
        Width="600"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

    </Window.Resources>

    <Border Background="White" 
            BorderThickness="4" 
            CornerRadius="14">
        <Border.BorderBrush>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FFDC00D4" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <TextBlock x:Name="mensajeConfirmacion"
                      Text="¿CONFIRMAR?"
                      FontSize="42"
                      FontFamily="Bahnschrift Condensed"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Top" Margin="0,169,0,0"
                      />


            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,20">
                <Button Style="{DynamicResource btn}"  
                        x:Name="siBtn" 
                        Content="SI" 
                        Height="93" 
                        Width="228" 
                        FontFamily="Bahnschrift Condensed" 
                        FontSize="72"
                        Margin="0,0,20,0" Click="siBtn_Click"
                        />

                <Button Style="{DynamicResource btn}" 
                        x:Name="noBtn" 
                        Content="NO" 
                        Height="93" 
                        Width="228" 
                        FontFamily="Bahnschrift Condensed" 
                        FontSize="72" Click="noBtn_Click"
                        />
            </StackPanel>
            <Label Content="TOTAL A PAGAR:" HorizontalAlignment="Left" Height="76" Margin="36,61,0,0" VerticalAlignment="Top" Width="382" FontFamily="Bahnschrift Condensed" FontSize="72" Foreground="#FFD63ED1" BorderBrush="Black"/>
        </Grid>
    </Border>
</Window>