<Window x:Class="ElySalon.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElySalon"
        mc:Ignorable="d"
        Title="AdminWindow" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Button x:Name="itemsBtn" Style="{StaticResource btn}" Content="ITEMS" HorizontalAlignment="Left" Height="218" Margin="94,186,0,0" VerticalAlignment="Top" Width="503" FontSize="90" FontWeight="Bold" FontFamily="Bahnschrift Condensed"/>
        <Button x:Name="generalBtn" Style="{StaticResource btn}" Content="GENERAL" HorizontalAlignment="Left" Height="220" Margin="90,432,0,0" VerticalAlignment="Top" Width="504" FontSize="90" FontWeight="Bold" FontFamily="Bahnschrift Condensed"/>
        <Button x:Name="salesBtn" Style="{StaticResource btn}" Content="VENTAS" HorizontalAlignment="Left" Height="218" Margin="682,186,0,0" VerticalAlignment="Top" Width="504" FontSize="90" FontWeight="Bold" FontFamily="Bahnschrift Condensed"/>
        <Button x:Name="mailBtn" Style="{StaticResource btn}" Content="CORREOS" HorizontalAlignment="Left" Height="220" Margin="682,432,0,0" VerticalAlignment="Top" Width="504" FontSize="90" FontWeight="Bold" FontFamily="Bahnschrift Condensed"/>
        <Button x:Name="exitBtn" Style="{StaticResource btn}" Content="SALIR" HorizontalAlignment="Left" Height="70" Margin="94,68,0,0" VerticalAlignment="Top" Width="184" FontSize="36" FontWeight="Bold" Background="#FFE613AD" Click="exitBtn_Click"/>
        <Label Content="ADMINISTRACIÓN" HorizontalAlignment="Center" Height="106" Margin="0,32,0,0" VerticalAlignment="Top" Width="548" FontSize="100" FontFamily="Bahnschrift Condensed"/>
    </Grid>
</Window>
