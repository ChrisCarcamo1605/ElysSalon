<Window x:Class="ElySalon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElySalon"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280"
          WindowStartupLocation="CenterScreen">
    <Window.Resources>

        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" StrokeDashArray="1 2" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" SnapsToDevicePixels="true" StrokeThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFDEDEDE"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
        
    </Window.Resources>
    <Grid x:Name="mainWindow" RenderTransformOrigin="25,0" Height="720" Margin="0,0,0,-16">
        <Grid.Background>
            <ImageBrush ImageSource="/wallpaper.jpg" Opacity="0.75"/>
        </Grid.Background>

        <Ellipse HorizontalAlignment="Center" Height="490" Margin="0,656,0,0" Stroke="Black" VerticalAlignment="Top" Width="2604" Fill="Black"/>

        <Button x:Name="btnServices" Style="{DynamicResource BtnMenu}" Content="SERVICIOS" HorizontalAlignment="Left" Height="478" Margin="78,140,0,0" VerticalAlignment="Top" Width="366" FontSize="80" FontWeight="Bold" FontFamily="Bahnschrift Condensed" Foreground="#FFFFF9FC" Click="btnServices_Click">


            <Button.Background>
                <ImageBrush ImageSource="/Servicios.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnProducts" Style="{DynamicResource BtnMenu}" Content="PRODUCTOS" HorizontalAlignment="Left" Height="478" Margin="494,140,0,0" VerticalAlignment="Top" Width="366" FontSize="80" FontWeight="Bold" FontFamily="Bahnschrift Condensed" Foreground="#FFFFF9FC">
            <Button.Background>
                <ImageBrush ImageSource="/productos.jpg"/>
            </Button.Background>
        </Button>
        <Image   HorizontalAlignment="Left" Height="341" Margin="906,61,0,0" VerticalAlignment="Top" Width="322" Source="/NEGRO LOGO_Mesa de trabajo 1.png">

            <Image.Effect>
                <DropShadowEffect Color="Black" BlurRadius="35" ShadowDepth="1" Direction="360"/>
            </Image.Effect>
            <Image.OpacityMask>
                <ImageBrush ImageSource="/NEGRO LOGO_Mesa de trabajo 1.png" Stretch="Fill"/>
            </Image.OpacityMask>
        </Image>
        <Label Content="ELIJA UNA OPCIÓN" HorizontalAlignment="Left" Height="76" Margin="292,38,0,0" VerticalAlignment="Top" Width="360" FontFamily="Bahnschrift Condensed" FontSize="60" FontWeight="Bold"/>
        <Button Style="{StaticResource btnAdmin}" x:Name="adminBtn"  Content="ADMINISTRACION" HorizontalAlignment="Left" Height="66" Margin="928,539,0,0" VerticalAlignment="Top" Width="278" Background="Black" Foreground="White" FontFamily="Bahnschrift Condensed" FontSize="24" FontWeight="Bold" Click="adminBtn_Click">
            <Button.Effect>
                <DropShadowEffect Color="#FFFF00BE" BlurRadius="1" ShadowDepth="10" Direction="320"/>
            </Button.Effect>
        </Button>

    </Grid>
</Window>
