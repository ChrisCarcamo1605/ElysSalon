            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="exitGrid">
                        <Border Height="70"
                                Width="114"/>
                        <Grid.RenderTransform>
                            <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                        </Grid.RenderTransform>
                        <Grid.RenderTransformOrigin>
                            <Point X="0.5" Y="0.5"/>
                        </Grid.RenderTransformOrigin>
                        
                        <Grid.Background>
                            <ImageBrush ImageSource="C:\Users\mojic\OneDrive\Escritorio\Code Proyectos\ElySalon\ElySalon\Views\AdminViews\row.png" Stretch="Fill"/>
                        </Grid.Background>
                    </Grid>
                    <ControlTemplate.Triggers>
                        
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                             Storyboard.TargetProperty="ScaleX" To="1.2" Duration="00:00:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                             Storyboard.TargetProperty="ScaleY" To="1.2" Duration="00:00:0.2"/>
                                    </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                 Storyboard.TargetProperty="ScaleX" To="1" Duration="00:00:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                  Storyboard.TargetProperty="ScaleY" To="1" Duration="00:00:0.2"/>
                                    </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                       
                   
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>